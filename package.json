{
  "name": "text2image",
  "version": "0.0.1",
  "description": "Create images without hassle üñºÔ∏è",
  "author": "Marco Franke <mfranke87@icloud.com>",
  "repository": "https://github.com/Disane87/text2image-nodejs",
  "private": false,
  "license": "MIT",
  "scripts": {
    "preinstall": "npm i -g @nestjs/cli",
    "prebuild": "npm run lint && npm run format",
    "build": "nest build",
    "postbuild": "npx cpx ./config/** ./dist/config && npx cpx ./config/** ./dist/.config_default/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "predocker:build": "npm run build",
    "docker:build": "docker build -t disane/text2image .",
    "docker:test": "npm run build && docker build -t disane/text2image:next . && docker rm text2image --force && npx rimraf C:\\Temp\\text2image\\ && docker run -d  --env=NODE_ENV=production --env=NODE_NO_WARNINGS=1 --volume=C:\\Temp\\text2image\\config:/text2image/config -p 3000:3000 --name=text2image disane/text2image:next  && docker logs text2image --tail 50 -f"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "axios": "^1.6.2",
    "canvas": "^2.11.2",
    "cheerio": "^1.0.0-rc.12",
    "nest-winston": "^1.9.4",
    "node-html-to-image": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@stylistic/eslint-plugin-js": "^1.4.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cpx": "^1.5.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}